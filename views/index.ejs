<%- include("header") %>
<div class="header">
    <h1>CORE COST ESTIMATOR</h1>
    <h6>This application calculates the average cost of core produced</h6>
</div>

<div class="form-container">
    <form action="/index" method="post">
        <div class="form-group custom-form-group">
            <label for="noOfRows_CoreProduction">Enter the number of sizes of core</label>
            <input type="number" name="noOfRows_CoreProduction" id="noOfRows_CoreProduction" class="form-control custom-input" autocomplete="off">
            <small id="" class="form-text custom-small">If report has 4x2 and 3x2 sizes, input 2 and so on</small>
        </div>
        <div class="form-group custom-form-group">
            <label for="noOfRows_CoreProduction">Enter the number of vehicles</label>
            <input type="number" name="noOfVehicles" id="noOfVehicles" class="form-control custom-input" autocomplete="off">
            <small id="" class="form-text custom-small">Number of vehicles (nagg) in report</small>
        </div>
        <div class="btn-center-div">
            <button type="submit" class="btn btn-lg form-button">SUBMIT</button>
        </div>
    </form>
</div>
<%- include("footer") %>